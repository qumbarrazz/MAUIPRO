<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIPRO.MainPage"
             Title="User Management">

    <StackLayout Padding="20">
        <Label Text="Name" />
        <Entry x:Name="NameEntry" Placeholder="Enter your name" />

        <Label Text="Age" />
        <Entry x:Name="AgeEntry" Placeholder="Enter your age" Keyboard="Numeric" />

        <Label Text="Number" />
        <Entry x:Name="NumberEntry" Placeholder="Enter your number" Keyboard="Telephone" />

        <Button Text="Create User" Clicked="OnCreateUserClicked" />
        <Button Text="View Users" Clicked="OnViewUsersClicked" />
    </StackLayout>

</ContentPage>
